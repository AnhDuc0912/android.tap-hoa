<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title thì AlertDialog sẽ tự vẽ, không cần trong layout -->

        <!-- Product Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="14sp"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F1F3F4"
            android:paddingHorizontal="8dp"/>

        <!-- Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:paddingTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F1F3F4"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"/>
            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:background="#F1F3F4"
                android:paddingStart="4dp"/>
        </LinearLayout>

        <!-- Product Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Image"
            android:textSize="14sp"
            android:paddingTop="8dp"/>
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose File"/>

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textSize="14sp"
            android:paddingTop="8dp"/>

        <!-- Hàng nhập feature: EditText + nút + -->
        <LinearLayout
            android:id="@+id/llFeatureInputRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/etFeature"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="#F1F3F4"
                android:paddingHorizontal="8dp"
                android:hint="Add feature" />

            <ImageButton
                android:id="@+id/btnAddFeature"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_green_plus"
                android:contentDescription="Add feature"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Container dọc để hiển thị các chip bên dưới -->
        <LinearLayout
            android:id="@+id/llFeaturesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"/>

    </LinearLayout>
</ScrollView>
